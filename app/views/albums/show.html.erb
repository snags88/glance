<h1>Albums#show</h1>
<p>This will become the map page</p>

<img src="<%= @album.owner.image %>">
<p>@<%= @album.owner.nickname %></p>
<%- @album.contributors.each do |contributor| -%>
  <p>@<%= contributor.nickname %></p>
<%- end -%>

<h2><%= @album.title %></h2>

<div id="earth_div" style="width:600px;height:400px;border:1px solid gray; padding:2px;"></div>

<%- chronological_photos(@album).each do |photo| -%>
<!--   <%= image_tag photo.media_url %><br>
  <p><%= photo.caption %></p>
  <p>Photo taken at: <%= photo.location_name %> (<%= ", " %>) on <%= photo.posted_time %></p> -->
  <input type="button" value="Fly to <%= photo.location_name %>" onclick="panTo([<%= "#{photo.latitude}, #{photo.longitude}"%>]);"%><br>
<%- end -%>


<%= link_to "Edit Album", edit_album_path(@album) %><br>
<%= link_to "Delete Album", @album, method: :delete %><br>