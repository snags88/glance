<section class="inner-intro bg-img24 overlay-dark">
  <div class="container">
    <div class="row title">
      <h2 class="h2">#<%= @album.title %></h2>
    </div>
  </div>
</section>
<div class="clearfix"></div>

<section class="ptb ptb-sm-80">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 mt-xs-30">
        <%= render 'albums/sidebar/contributors', album: @album %>
        <%= show_edit_menu(@album) %>
      </div>

      <div class="col-md-9 col-sm-8">
        <div class="tabs b-lrb-none">
          <ul>
            <li><a href="#tabs-gallery" id="gallery"><i class="ion ion-images left"></i>Gallery</a></li>
            <li id="map-tab-button"><a href="#tabs-map" ><i class="ion ion-map left"></i>Map</a></li>
          </ul>
          <div class="ui-tab-content">
            <div id="tabs-gallery" class="plr-0">
              <%= render 'albums/show/gallery', album: @album %>
            </div>
            <div id="tabs-map" class="plr-0">
              <%= render 'albums/show/map', album: @album %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</section>
