<div class="sidebar-widget">
  <h5>Manage</h5>
  <hr>
  <ul>
    <%- if album.public -%>
    <li><i class="ion ion-share"></i> Share: <%= "#{request.protocol}#{request.host_with_port}/albums/#{album.slug}?p=#{album.token}" %></li>
    <%- end -%>
    <li><i class="ion ion-edit"></i> <%= link_to "Update", edit_album_path(album) %></li>
    <li><i class="ion ion-trash-a"></i> <%= link_to "Delete", album, method: :delete %></li>
  </ul>
</div>